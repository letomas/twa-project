{% extends 'layout.html.twig' %}

{% block headerNavigation %}
    <nav>
        <a href="{{ path( 'index' ) }}">rooms</a>
        <a href="">bookings</a>
        <a id="sub-nav-title--manage" href="#">manage</a>
        <nav id="sub-nav--manage">
            <a href="{{ path( 'requests' ) }}">room requests</a>
            <a href="">room admins</a>
            <a href="{{ path( 'groups' ) }}">groups</a>
            <a href="{{ path('rooms') }}">rooms</a>
            <a href="{{ path( 'buildings' ) }}" id="nav-option--highlighted">buildings</a>
        </nav>
        <a class="header-navigation__logout" href="{{ path( 'app_login' ) }}">login</a>
    </nav>
{% endblock %}

{% block section %}
{#    pridej sem prosim nejaky nazev pro stranku#}
    <section class="section-list">
        {% for building in buildings %}
{#            udelal jsem zakladni vypisovani budov zmen styl prosim#}
            <article>
                <h2>
                    <span>{{ building.name }}</span>
                </h2>
                <span><a href="#" class="btn btn--view">view</a></span>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <span><a href="#" class="btn btn-edit">edit</a></span>
                {% endif %}
            </article>
        {% endfor %}
    </section>
{% endblock %}