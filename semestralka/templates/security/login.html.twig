{% extends '/security/component/navbar.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block section %}
<section class="section-login">
<form class="form" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
{#
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputUsername">Username</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
#}
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <h2>Log In</h2>
    <div class="form__group">
        <input type="text" name="username" class="form__input" placeholder="Username" id="inputUsername" required value="{{ last_username }}" autofocus>
        <label for="inputUsername" class="form__label">Username</label>
    </div>
    <div class="form__group">
        <input type="password" name="password" class="form__input" placeholder="Password" id="inputPassword" required value="{{ last_username }}" autofocus>
        <label for="inputPassword" class="form__label">Password</label>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <button class="btn btn--mid btn--save btn--center btn--rect" type="submit">
        Log In
    </button>
</form>
</section>
{% endblock %}
