{% extends '/request/component/navbar.html.twig' %}

{% block title %}
    Room Booking - Manage Requests - Detail
{% endblock %}

{% block headerNavigation %}
    <nav>
        <a href="{{ path( 'index' ) }}">rooms</a>
        <a href="">bookings</a>
        <a id="sub-nav-title--manage" href="#">manage</a>
        <nav id="sub-nav--manage">
            <a href="{{ path( 'requests' ) }}" id="nav-option--highlighted">room requests</a>
            <a href="">room admins</a>
            <a href="{{ path( 'club' ) }}">clubs</a>
            <a href="{{ path('rooms') }}">rooms</a>
            <a href="{{ path( 'buildings' ) }}">buildings</a>
        </nav>
        <a class="header-navigation__logout" href="{{ path( 'app_login' ) }}">login</a>
    </nav>
{% endblock %}

{% block section %}
    <section class="section-detail">
        <article>
            <div>
                <a href="#" class="btn btn--delete">deny</a>
                <a href="#" class="btn btn--approve">approve</a>
            </div>
            <h2>
                {{ request.room.name }}
            </h2>
            <h3>Request by</h3>
            <span>{{ request.createBy.username }}</span>
            <h3>Room Type</h3>
            <span>{{ request.room.club }}</span>
            <h3>Capacity</h3>
            <span>{{ request.room.capacity }}</span>
            <h3>Admin</h3>
            {% for admin in request.room.manageBy %}
                <span>{{ admin.username }}</span>
            {% endfor %}
            <h3>Description</h3>
            <p>
                {{ request.room.description }}
            </p>
        </article>
    </section>
{% endblock %}