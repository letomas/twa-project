{% extends '/request/component/navbar.html.twig' %}

{% block title %}
    Room Booking - Manage Requests - Edit
{% endblock %}

{% block section %}
    <section class="section-edit">
        {{ form_start(form) }}
        <div class="form__group">
            {{ form_widget(form.start, {'attr': {'class': 'form__input'}}) }}
            {{ form_label(form.start, 'From', {'label_attr': {'class': 'form__label'}}) }}
        </div>
        <div class="form__group">
            {{ form_widget(form.end, {'attr': {'class': 'form__input'}}) }}
            {{ form_label(form.end, 'To', {'label_attr': {'class': 'form__label'}}) }}
        </div>
        <button type="submit" class="btn btn--save">save</button>
        {{ form_end(form) }}
    </section>
{% endblock %}