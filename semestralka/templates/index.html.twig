{% extends 'layout.html.twig' %}

{% block section %}
    <section class="section-list">
        {% if rooms is empty %}
            <h2>No room in database</h2>
        {% endif %}

        {% for room in rooms %}
            <article>
                <h2>
                    <span>{{ room.name }}</span>
                </h2>
                <div>
                    <span class="tag tag--capacity">{{ room.capacity }}</span>
                    <span class="tag tag--room-type">{{ room.type }}</span>
                </div>
                <div>
                    <a href={{ path('room_detail', {id : room.id}) }}, class="btn btn--view">view</a>
                </div>
            </article>
        {% endfor %}
    </section>
{% endblock %}