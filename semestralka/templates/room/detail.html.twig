{% extends 'layout.html.twig' %}

{% block title %}
    Room detail
{% endblock %}

{% block headerNavigation %}
    <nav>
        <a href="{{ path( 'index' ) }}">rooms</a>
        <a href="">bookings</a>
        <a id="sub-nav-title--manage" href="#">manage</a>
        <nav id="sub-nav--manage">
            <a href="{{ path( 'requests' ) }}" >room requests</a>
            <a href="">room admins</a>
            <a href="{{ path( 'groups' ) }}">groups</a>
            <a href="{{ path('rooms') }}"  id="nav-option--highlighted">rooms</a>
            <a href="{{ path( 'buildings' ) }}">buildings</a>
        </nav>
        <a class="header-navigation__logout" href="{{ path( 'app_login' ) }}">login</a>
    </nav>
{% endblock %}

{% block section %}
    <section class="section-room-detail">
        <article>
            <div>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <a href="#" class="btn btn--delete">delete</a>
                {% endif %}
                {% if is_granted('edit', room) or is_granted('ROLE_SUPER_ADMIN') %}
                    <a href="#" class="btn btn--edit">edit</a>
                {% endif %}
            </div>
            <h2>
                {{ room.name }}
            </h2>
            <h3>Room Type</h3>
            <span>{{ room.type }}</span>
            <h3>Capacity</h3>
            <span>{{ room.capacity }}</span>
            <h3>Admin</h3>
            {% if room.manageBy is null %}
                <span>Not manage by anyone</span>
            {% else %}
                <span> {{ room.manageBy.name }}</span>
            {% endif %}

            <h3>Description</h3>
            <p>
                {{ room.description }}
            </p>
        </article>
    </section>
{% endblock %}